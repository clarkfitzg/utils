" Vimrc
" Clark Fitzgerald
"
" Set the colorscheme and font
"colorscheme delek
set number              " Display line numbers
"set gfn=Menlo:h14

" Single spaces after sentences
set nojoinspaces

" Tab settings
set tabstop=4
set expandtab
set softtabstop=4
set shiftwidth=4

" To use Python mode
"filetype off

" Tim Pope's Package installer
" Used for Slime / tmux
execute pathogen#infect()
"call pathogen#helptags()

filetype plugin indent on
syntax on

" Keep it under 80 characters wide
" set textwidth=79

" From Practical Vim book
set history=200     " Change from 20 commands to 200 in history.

" Toggle folding with spacebar
set foldmethod=indent
nnoremap <Space> za
vnoremap <Space> zf
set foldnestmax=2

" Highlight trailing whitespace
"match Todo /\s\+$/

" Text width
set tw=75

" Vim slime
let g:slime_target = "tmux"
let g:slime_default_config = {"socket_name": "default", "target_pane": "1"}
let g:slime_python_ipython = 1

" C syntax for OpenCL kernels
au BufNewFile,BufRead *.cl set filetype=c

""""""""""""""""""""""""""""""""""""""""
""" Macros
""""""""""""""""""""""""""""""""""""""""

" Remove all trailing whitespace in file
let @w = ':%s/\s\+$//'
